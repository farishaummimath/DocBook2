<h2>Doctor Registration</h2>
<% form_for @doctor do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth, "Date of Birth" %><br />
    <%= f.date_select :date_of_birth, :start_year=>1900 %>  </div>
  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
  </div>
  <div class="field">
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :nationality%><br />
    <%= f.text_field :nationality %>
  </div>
  <div class="field">
    <%= f.label :gender, "Female", :value => "female"  %>
    <%= f.radio_button :gender, "female" , :checked => true  %>
    <%= f.label :gender, "Male", :value => "male" %>
    <%= f.radio_button :gender, "male"%>
  </div>
      <div class="field">
    <%= f.label :qualifications%><br />
    <%= f.text_field :qualifications %>
  </div>
  <div class="field">
    <%= f.label :experience%><br />
    <%= f.text_field :experience %>
  </div>
  <div class="field">
      <%= f.select :department_id, Department.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select Department"} %><br />
  </div>
  <div class="actions"><%= f.submit "Sign up" %></div>
<% end %>