<h1>Patient Registration</h1>
<p>Already have an account? <%= link_to "Log in", signin_path %>.</p>

<% form_for @patient, :html => { :multipart => true } do |f| %>

  <%= f.error_messages %>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :date_of_birth, "Date of Birth" %><br />
    <%= f.date_select :date_of_birth, :start_year=>1900 %>  </p>
  <p>
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :nationality%><br />
    <%= f.text_field :nationality %>
  </p>
  <p>
    
    <%= f.label :gender, "Female", :value => "female"  %>
    <%= f.radio_button :gender, "female" , :checked => true  %>
    <%= f.label :gender, "Male", :value => "male" %>
    <%= f.radio_button :gender, "male"%>
  </p>
  <p>
    <%= f.label :blood_group%><br />
    <%= f.text_field :blood_group %>
  </p>
  <div class="field">
     <%= f.label :photo, "Upload Profile photo" %>
   	 <%= f.file_field :photo %>
   </div>
    
  <p><%= f.submit "Sign up" %></p>
<% end %>